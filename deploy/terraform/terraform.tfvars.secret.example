# Power Grid LLM - Secret Variables
# Copy this file to terraform.tfvars.secret and fill in your values
# NEVER commit terraform.tfvars.secret to git!

# Email for Let's Encrypt certificate notifications
letsencrypt_email = "your-email@example.com"

# Anthropic Claude API Key
# Get yours at: https://console.anthropic.com/
claude_api_key = "sk-ant-api..."

# HTTP Basic Auth for nginx (development protection)
# Generate with: htpasswd -n username
# Or with: echo "username:$(openssl passwd -apr1 'your-password')"
http_auth_line = "admin:$apr1$EXAMPLE$HashedPasswordHere"

# Home IP for restricted access during development
# Get your IP with: curl ifconfig.me
home_ip = "1.2.3.4/32"
